@model crssAssetDV.ViewModels.LoanNoteFormViewModel

@{
    ViewBag.Title = " Loan Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Create", "LoanNotes"))
{
    @Html.HiddenFor(model => model.LoanNote.Id)
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Loan Notes</h2>
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.LoanNote.LoanId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.LoanNote.LoanId, new SelectList(Model.Loans.OrderBy(x => x.Id), "Id", "Id"), "--Please Select--", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LoanNote.LoanId, "Required selection needed.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LoanNote.Note, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.LoanNote.Note, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(M => M.LoanNote.Note, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>

    }

    <div>
        @Html.ActionLink("Back", "Index")
    </div>
